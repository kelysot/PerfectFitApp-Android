<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_view_user_profiles"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_profiles.UserProfilesFragment">


    <com.scwang.wave.MultiWaveHeader
        android:id="@+id/MultiWave"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/user_profiles_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.scwang.wave.MultiWaveHeader>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consraint_user_profiles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MultiWave">

        <Button
            android:id="@+id/user_profiles_profile1_btn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="359dp"
            android:layout_height="75dp"
            android:layout_marginTop="30dp"
            android:shadowColor="@color/buttonUserProfilesBtns"
            android:text="Button"
            android:textColor="@color/buttonUserProfilesBtns"
            android:textColorHighlight="@color/buttonUserProfilesBtns"
            android:textColorHint="@color/buttonUserProfilesBtns"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_profiles_style_tv"
            app:strokeColor="@color/buttonUserProfilesBtns" />


        <Button
            android:id="@+id/user_profiles_profile5_btn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="359dp"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:shadowColor="@color/buttonUserProfilesBtns"
            android:text="Button"
            android:textColor="@color/buttonUserProfilesBtns"
            android:textColorHighlight="@color/buttonUserProfilesBtns"
            android:textColorHint="@color/buttonUserProfilesBtns"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_profiles_profile4_btn"
            app:layout_constraintVertical_bias="0.026"
            app:strokeColor="@color/buttonUserProfilesBtns" />

        <Button
            android:id="@+id/user_profiles_profile4_btn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="359dp"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:shadowColor="@color/buttonUserProfilesBtns"
            android:text="Button"
            android:textColor="@color/buttonUserProfilesBtns"
            android:textColorHighlight="@color/buttonUserProfilesBtns"
            android:textColorHint="@color/buttonUserProfilesBtns"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_profiles_profile3_btn"
            app:strokeColor="@color/buttonUserProfilesBtns" />

        <Button
            android:id="@+id/user_profiles_profile3_btn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="359dp"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:shadowColor="@color/buttonUserProfilesBtns"
            android:text="Button"
            android:textColor="@color/buttonUserProfilesBtns"
            android:textColorHighlight="@color/buttonUserProfilesBtns"
            android:textColorHint="@color/buttonUserProfilesBtns"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_profiles_profile2_btn"
            app:strokeColor="@color/buttonUserProfilesBtns" />

        <Button
            android:id="@+id/user_profiles_profile2_btn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="359dp"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:shadowColor="@color/buttonUserProfilesBtns"
            android:text="Button"
            android:textColor="@color/buttonUserProfilesBtns"
            android:textColorHighlight="@color/buttonUserProfilesBtns"
            android:textColorHint="@color/buttonUserProfilesBtns"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_profiles_profile1_btn"
            app:strokeColor="@color/buttonUserProfilesBtns" />

        <TextView
            android:id="@+id/user_profiles_style_tv"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Who is styling?"
            android:textColor="#2F4858"
            android:textSize="34sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_profiles_text"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="321dp"
            android:layout_height="86dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"
            android:shadowColor="#C2EFCD"
            android:text="Let's create a profile!"
            android:textColor="#344C3F"
            android:textSize="32dp"
            android:textStyle="bold|italic"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.455"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <pl.droidsonroids.gif.GifImageButton
            android:id="@+id/gif_green"
            android:layout_width="398dp"
            android:layout_height="234dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="240dp"
            android:src="@drawable/plud_green_gif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_profiles_text" />


        <!--        <pl.droidsonroids.gif.GifImageButton-->
