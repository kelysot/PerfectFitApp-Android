<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_profiles.UserProfilesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="wrap_content"
            android:layout_height="644dp"
            android:layout_marginTop="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="190dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/user_profiles_profile1_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/myWhite"
                    android:text="User1"
                    android:textColor="#4f4f4f"
                    android:textSize="20dp"
                    app:strokeColor="@color/myGold"
                    app:strokeWidth="2dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="34dp"
                tools:visibility="visible">

                <Button
                    android:id="@+id/user_profiles_profile2_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/myWhite"
                    android:text="User2"
                    android:textColor="#4f4f4f"
                    android:textSize="20dp"
                    app:strokeColor="@color/myGold"
                    app:strokeWidth="2dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/user_profiles_profile3_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/myWhite"
                    android:text="User3"
                    android:textColor="#4f4f4f"
                    android:textSize="20dp"
                    app:strokeColor="@color/myGold"
                    app:strokeWidth="2dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/user_profiles_profile4_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/myWhite"
                    android:text="User4"
                    android:textColor="#4f4f4f"
                    android:textSize="20dp"
                    app:strokeColor="@color/myGold"
                    app:strokeWidth="2dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="118dp">

                <Button
                    android:id="@+id/user_profiles_profile5_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/myWhite"
                    android:text="User5"
                    android:textColor="#4f4f4f"
                    android:textSize="20dp"
                    app:strokeColor="@color/myGold"
                    app:strokeWidth="2dp" />
            </TableRow>
        </TableLayout>

        <ImageButton
            android:id="@+id/user_profiles_addprofile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="35dp"
            android:background="@color/myWhite"
            android:src="@drawable/ic_person_add_alt_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/user_profiles_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="234dp"
            android:layout_height="200dp"
            android:layout_marginStart="81dp"
            android:layout_marginEnd="89dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/user_profiles_settings_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="35dp"
            android:src="@drawable/ic_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_profiles_addprofile_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>