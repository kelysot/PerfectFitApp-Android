            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            app:boxBackgroundColor="@color/myWhite"
            app:boxStrokeColor="#c1c1c1"
            app:hintTextColor="#4f4f4f"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/register_step3_shoulder_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shoulder"
