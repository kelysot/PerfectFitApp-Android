            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="50dp"
            android:background="#FAFAFA"
            android:src="@drawable/ic_addphotoo"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_step1_image_imv" />

        <ImageButton
            android:id="@+id/register_step1_gallery_imv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="50dp"
            android:background="#FAFAFA"
            android:src="@drawable/ic_add_photolibary"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout26"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_step1_image_imv" />

