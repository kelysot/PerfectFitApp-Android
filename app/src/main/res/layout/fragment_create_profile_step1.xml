<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".create_profile.CreateProfileStep1Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/myCream">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/register_step1_big_image_imv"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    android:adjustViewBounds="true"
                    android:background="#C9FFFFFF"
                    android:src="@drawable/coverphotoprofile"
                    app:layout_constraintDimensionRatio="w,21:9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <ImageView
                    android:id="@+id/register_step1_birthday_imv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="32dp"
                    android:src="@drawable/calendar"
                    app:layout_constraintBottom_toBottomOf="@+id/textInputLayout28"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textInputLayout28" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout26"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="16dp"
                    app:boxBackgroundColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textInputLayout3"
                    app:layout_constraintTop_toBottomOf="@+id/register_step1_image_imv">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/register_step1_lastname_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FAFAFA"
                        android:fontFamily="@font/dosis"
                        android:hint="Last Name"
                        android:inputType="textPersonName"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/register_step1_continue_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="70dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/btnColor"
                    android:text="Continue"
                    app:cornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/register_step1_none_cb" />


                <CheckBox
                    android:id="@+id/register_step1_none_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/dosis"
                    android:text="Prefer not to say"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/register_step1_male_cb"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout28" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="4dp"
                    app:boxBackgroundColor="@color/white"
                    app:layout_constraintEnd_toStartOf="@+id/textInputLayout26"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/register_step1_image_imv">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/register_step1_name_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FAFAFA"
                        android:fontFamily="@font/dosis"
                        android:hint="First Name"
                        android:inputType="textPersonName"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout28"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="4dp"
                    app:boxBackgroundColor="@color/white"
                    app:layout_constraintEnd_toStartOf="@+id/register_step1_birthday_imv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout4">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/register_step1_birthday_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FAFAFA"
                        android:enabled="false"
                        android:fontFamily="@font/dosis"
                        android:hint="Birthday"
                        android:inputType="date"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/register_step1_add_big_photo_imv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#00FAFAFA"
                    android:src="@drawable/ic_addphotoo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/register_step1_big_image_imv" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/dosis_medium"
                    android:text="Create New Profile"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/register_step1_image_imv"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_default"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/register_step1_big_image_imv"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

                <ImageButton
                    android:id="@+id/register_step1_add_photo_imv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-20dp"
                    android:layout_marginTop="-20dp"
                    android:backgroundTint="#00FAFAFA"
                    android:src="@drawable/ic_addphotoo"
                    app:layout_constraintBottom_toTopOf="@+id/textInputLayout3"
                    app:layout_constraintStart_toEndOf="@+id/register_step1_image_imv"
                    app:layout_constraintTop_toBottomOf="@+id/register_step1_image_imv" />

                <CheckBox
                    android:id="@+id/register_step1_male_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/dosis"
                    android:text="Male"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/register_step1_none_cb"
                    app:layout_constraintStart_toEndOf="@+id/register_step1_female_cb"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout28" />


                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/register_step1_progress_bar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_url="https://assets9.lottiefiles.com/packages/lf20_ocv8gwxx.json" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout4"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    app:boxBackgroundColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout3">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/register_step1_username_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FAFAFA"
                        android:drawableStart="@drawable/ic_user"
                        android:drawableLeft="@drawable/ic_user"
                        android:fontFamily="@font/dosis"
                        android:hint="User Name"
                        android:inputType="text"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <CheckBox
                    android:id="@+id/register_step1_female_cb"
                    android:layout_width="101dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/dosis"
                    android:text="Female"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/register_step1_male_cb"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout28" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>