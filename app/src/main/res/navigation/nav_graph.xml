<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/userProfilesFragment">

    <fragment
        android:id="@+id/homePageFragment"
        android:name="com.example.perfectfitapp_android.HomePageFragment"
        android:label="fragment_home_page"
        tools:layout="@layout/fragment_home_page" >
        <action
            android:id="@+id/action_homePageFragment_to_addNewPostFragment"
            app:destination="@id/addNewPostFragment"
            app:popUpTo="@id/homePageFragment" />
        <action
            android:id="@+id/action_homePageFragment_to_postPageFragment2"
            app:destination="@id/postPageFragment" />
        <action
            android:id="@+id/action_homePageFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNewPostFragment"
        android:name="com.example.perfectfitapp_android.post.AddNewPostFragment"
        android:label="fragment_add_new_post"
        tools:layout="@layout/fragment_add_new_post" />
    <action android:id="@+id/action_global_addNewPostFragment" app:destination="@id/addNewPostFragment" />
    <action android:id="@+id/action_global_homePageFragment" app:destination="@id/homePageFragment" />
    <fragment
        android:id="@+id/editPostFragment"
        android:name="com.example.perfectfitapp_android.post.EditPostFragment"
        android:label="fragment_edit_post"
        tools:layout="@layout/fragment_edit_post" >
        <argument
            android:name="postId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/postPageFragment"
        android:name="com.example.perfectfitapp_android.post.PostPageFragment"
        android:label="fragment_post_page"
        tools:layout="@layout/fragment_post_page" >
        <action
            android:id="@+id/action_postPageFragment_to_editPostFragment"
            app:destination="@id/editPostFragment" />
        <argument
            android:name="postId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.perfectfitapp_android.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/userProfilesFragment"
        android:name="com.example.perfectfitapp_android.UserProfilesFragment"
        android:label="fragment_user_profiles"
        tools:layout="@layout/fragment_user_profiles" >
        <action
            android:id="@+id/action_userProfilesFragment_to_registerFragment2"
            app:destination="@id/createProfileStep1Fragment" />
        <action
            android:id="@+id/action_userProfilesFragment_to_homePageFragment"
            app:destination="@id/homePageFragment" />
    </fragment>
    <fragment
        android:id="@+id/createProfileStep1Fragment"
        android:name="com.example.perfectfitapp_android.create_profile.CreateProfileStep1Fragment"
        android:label="Create Profile - Step 1"
        tools:layout="@layout/fragment_create_profile_step1">
        <action
            android:id="@+id/action_registerFragment2_to_registerStep2Fragment2"
            app:destination="@id/createProfileStep2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/createProfileStep2Fragment"
        android:name="com.example.perfectfitapp_android.create_profile.CreateProfileStep2Fragment"
        android:label="Create Profile - Step 2"
        tools:layout="@layout/fragment_create_profile_step2">
        <action
            android:id="@+id/action_registerStep2Fragment2_to_registerStep3Fragment2"
            app:destination="@id/createProfileStep3Fragment" />
    </fragment>
    <fragment
        android:id="@+id/createProfileStep3Fragment"
        android:name="com.example.perfectfitapp_android.create_profile.CreateProfileStep3Fragment"
        android:label="Create Profile - Step 3"
        tools:layout="@layout/fragment_create_profile_step3">
        <action
            android:id="@+id/action_registerStep3Fragment2_to_homePageFragment"
            app:destination="@id/homePageFragment" />
    </fragment>
</navigation>